<?php

/**
 * @file
 * Install, update and uninstall functions for the paybox module.
 */

/**
 * Implements hook_schema().
 */
function paybox_schema() {
  $schema['paybox_payments'] = array(
    'description' => 'The paybox table stores information about each payment.',
    'fields' => array(
      'pid' => array(
        'type' => 'serial',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'description' => 'Unique payment ID.',
      ),
      'uid' => array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
        'description' => 'The {users}.uid that owns this payment; initially, this is the user that created it.',
      ),
      'amount' => array(
        'type' => 'numeric',
        'size' => 'normal',
        'not null' => TRUE,
        'default' => 0,
        'precision' => 12,
        'scale' => 6
      ),
      'order_id' => array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
        'description' => 'Order id.',
      ),
      'created' => array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
        'description' => 'Time of payment creation',
      ),
      'message' => array(
        'type' => 'varchar',
        'not null' => TRUE,
        'length' => 255,
        'default' => '',
      ),
      'enrolled' => array(
        'type' => 'int',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0,
        'description' => 'Time of payment enrolling',
      ),
      'error' => array(
        'type' => 'varchar',
        'length' => 255,
        'not null' => TRUE,
        'default' => '',
        'description' => 'Text of error (if occurred)',
      ),
      'params' => array(
        'type' => 'text',
        'size' => 'normal',
        'not null' => TRUE,
        'description' => 'Additional payment params',
      ),
    ),
    'primary key' => array('pid'),
  );

  return $schema;
}

/**
 * Implements hook_uninstall().
 */
function paybox_uninstall() {
  variable_del('paybox_activate_real_payments');
  variable_del('paybox_production_host');
  variable_del('paybox_production_hash_key');
  variable_del('paybox_sandbox_host');
  variable_del('paybox_sandbox_hash_key');
  variable_del('paybox_mode');
  variable_del('paybox_PBX_SITE');
  variable_del('paybox_PBX_RANG');
  variable_del('paybox_PBX_IDENTIFIANT');
  variable_del('paybox_authorized_ips');
  variable_del('paybox_effectue_message');
  variable_del('paybox_refuse_message');
  variable_del('paybox_annule_message');
}
